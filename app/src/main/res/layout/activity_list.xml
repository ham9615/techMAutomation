<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.example.adi.homesystem.listActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/scroll"
                android:fillViewport="false">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:src="@mipmap/magentabutton"
                 android:id="@+id/magentaButton"
                 android:layout_gravity="center"
                 android:layout_margin="25dp"
                 android:layout_centerHorizontal="true"
                 android:layout_below="@+id/yellowButton"
        />

    <ImageButton android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:src="@mipmap/bluebutton"
                 android:id="@+id/blueButton"
                 android:layout_margin="25dp"
                 android:layout_gravity="center"
                 android:layout_centerHorizontal="true"
                 android:layout_below="@+id/magentaButton"
        />

    <ImageButton android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:src="@mipmap/greenbuton"
                 android:id="@+id/greenButton"
                 android:layout_gravity="center"
                 android:layout_margin="25dp"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"/>

    <ImageButton android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:src="@mipmap/yellowbutton"
                 android:id="@+id/yellowButton"
                 android:layout_gravity="center"
                 android:layout_margin="25dp"
                 android:layout_centerHorizontal="true"
                 android:layout_below="@+id/greenButton"
                 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Device 1"
        android:ems="10"
        android:id="@+id/button1name"
        android:layout_alignBottom="@+id/greenButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Device 2"
        android:ems="10"
        android:id="@+id/button2name"
        android:layout_marginBottom="38dp"
        android:layout_alignBottom="@+id/yellowButton"
        android:layout_alignStart="@+id/button3name"
        android:layout_marginStart="11dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Device 3"
        android:ems="10"
        android:layout_marginBottom="35dp"
        android:id="@+id/button3name"
        android:layout_alignBottom="@+id/magentaButton"
        android:layout_alignParentEnd="true"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:background="@color/colorGreen"
        android:layout_alignBaseline="@+id/button1name"
        android:layout_alignBottom="@+id/button1name"
        android:layout_alignStart="@+id/greenButton"
        android:layout_marginStart="25dp"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@color/colorYellow"
        android:layout_alignBaseline="@+id/button2name"
        android:layout_alignBottom="@+id/button2name"
        android:layout_alignStart="@+id/button1"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@color/colorMagenta"
        android:layout_alignBaseline="@+id/button3name"
        android:layout_alignBottom="@+id/button3name"
        android:layout_alignStart="@+id/button4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Device 4"
        android:ems="10"
        android:layout_marginBottom="38dp"
        android:id="@+id/button4name"
        android:layout_alignBottom="@+id/blueButton"
        android:layout_alignParentEnd="true"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@color/colorBlue"
        android:layout_marginStart="9dp"
        android:layout_alignBaseline="@+id/button4name"
        android:layout_alignBottom="@+id/button4name"
        android:layout_alignStart="@+id/button2"/>
</RelativeLayout>
    </ScrollView>
    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/scroll"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/speak"
        android:id="@+id/speak"
        />
</RelativeLayout>
